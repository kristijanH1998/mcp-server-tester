# ================================
# Backend configuration
# ================================

# Host interface the FastAPI backend binds to
BACKEND_HOST=127.0.0.1

# Port the FastAPI backend listens on
BACKEND_PORT=8000

# Enable debug / reload mode (true or false)
BACKEND_DEBUG=true


# ================================
# MCP client configuration
# ================================

# Default MCP server URL used by the frontend
# (can be overridden by registering servers in the UI)
DEFAULT_MCP_SERVER_URL=http://127.0.0.1:8001/mcp


# ================================
# Experiment configuration
# ================================

# Maximum allowed iterations per experiment
# Prevents accidental overload of MCP servers
MAX_EXPERIMENT_ITERATIONS=100


# ================================
# CORS configuration
# ================================

# Allowed origins for the frontend
# Use "*" only for local development
CORS_ALLOW_ORIGINS=*
